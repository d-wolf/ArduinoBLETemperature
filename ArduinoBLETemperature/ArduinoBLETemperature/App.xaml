<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
             x:Class="ArduinoBLETemperature.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Teal">#00979d</Color>
            <Color x:Key="LightTeal">#6bbfc1</Color>
            <Color x:Key="DarkTeal">#008184</Color>
            <Color x:Key="Orange">#f39c12</Color>
            <Color x:Key="DarkOrange">#d94900</Color>
            <Color x:Key="Yellow">#f1c40f</Color>
            <Color x:Key="Brown">#9e846d</Color>
            <Color x:Key="LightBrown">#ebdcd6</Color>
            <Color x:Key="LightGray">#e5e5e5</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="HasNavigationBar" Value="True" />
                <Setter Property="BarTextColor" Value="White" />
                <Setter Property="BarBackgroundColor" Value="{StaticResource Key=DarkTeal}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>